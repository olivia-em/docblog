---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# The Home page uses this template–it extends the base template #}

<div class="wrapper home">
  <div class="content">
    {{ content | safe }}
    
    {# After the the content defined in index.md, list the blog posts in the collection #}
    <ul>
      {%- for course in collections.courses -%}
        <li{% if page.url == course.url %} aria-current="page"{% endif %}>{{ course.data.page.date | htmlDateString }} — <a href='{{ course.url }}'>{{ course.data.title }}</a></li>
      {%- endfor -%}
      <li><a href="/courses">View all Courses</a></li>
    </ul>
  </div>
</div>


